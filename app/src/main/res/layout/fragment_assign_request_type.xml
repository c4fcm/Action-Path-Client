<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/assign_request_type_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:padding="@dimen/textview_title_padding" />

    <Button
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/assigned_request_type_1"
        android:enabled="true"
        android:padding="30dp"
        android:layout_marginTop="30dp" />

    <Button
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/assigned_request_type_2"
        android:enabled="true"
        android:padding="30dp"
        android:layout_marginTop="30dp" />

    <Button
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/assigned_request_type_3"
        android:enabled="true"
        android:padding="30dp"
        android:layout_marginTop="30dp" />

</LinearLayout>