<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/abc_text_size_small_material">

    <TextView
        android:id="@+id/issue_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLines="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <!-- Might need to remove visibility=gone in normal app when description is present -->
    <TextView
        android:id="@+id/issue_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/issue_summary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/lighter_text"
        android:maxLines="3"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    />

</RelativeLayout>