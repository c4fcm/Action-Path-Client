<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/map_bubble_width"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin_half"
    android:paddingLeft="@dimen/activity_horizontal_margin_half">

    <TextView
        android:id="@+id/info_issue_summary"
        android:layout_width="@dimen/map_bubble_width"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <TextView
        android:id="@+id/info_issue_description"
        android:layout_width="@dimen/map_bubble_width"
        android:layout_height="wrap_content"
        android:textColor="@color/lighter_text"
        android:maxLines="3"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />

    <TextView
        android:id="@+id/info_click_note"
        android:text="@string/info_click_note"
        android:layout_width="@dimen/map_bubble_width"
        android:layout_height="wrap_content"
        android:textColor="@color/lighter_text"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textStyle="italic"
        android:paddingTop="@dimen/activity_horizontal_margin_half"
        />

</LinearLayout>