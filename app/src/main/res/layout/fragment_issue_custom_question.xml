<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    >

    <TextView
        android:paddingTop="@dimen/textview_title_padding"
        android:id="@+id/issue_custom_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/issue_custom_answer_group"
            android:paddingTop="@dimen/radio_button_group_padding">
        </RadioGroup>
        <EditText
            android:id="@+id/other_textbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/issue_custom_answer_group"
            android:layout_marginLeft="35dip"
            android:visibility="gone"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:textSize="@dimen/abc_text_size_body_1_material"
            android:hint="@string/other_hint" />
    </RelativeLayout>

</LinearLayout>